@model FacultySenateMVC.Models.Committee

@{
    ViewBag.Title = "Create Committee";
}

<h2>Create Committee</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Committee</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>

        <div class="editor-label">
            Type
        </div>
        <div class="editor-field">
            @Html.DropDownList("CommitteeTypeId", String.Empty)
            @Html.ValidationMessageFor(model => model.CommitteeTypeId)
        </div>

        <div class="editor-label">
            Term Length
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.TermLength)
            @Html.ValidationMessageFor(model => model.TermLength)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Active)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Active)
            @Html.ValidationMessageFor(model => model.Active)
        </div>

    </fieldset>

    <div>
        <input type="submit" value="Create" /> | 
        @Html.ActionLink("Back to List", "Index")
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
