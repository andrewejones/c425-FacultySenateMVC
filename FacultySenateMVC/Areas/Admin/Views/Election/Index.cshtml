@model IEnumerable<FacultySenateMVC.Models.Election>

@{
    ViewBag.Title = "Elections";
}

<h2>Elections</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            Id
        </th>
        <th>
            Election Type
        </th>
        <th>
            Nomination Dates
        </th>
        <th>
            Voting Dates
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TermStartDate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ElectionType.Name)
        </td>
        <td>
            @item.NominationStartDate.ToShortDateString() to @item.NominationEndDate.ToShortDateString()
        </td>
        <td>
            @item.VotingStartDate.ToShortDateString() to @item.VotingEndDate.ToShortDateString()
        </td>
        <td>
            @item.TermStartDate.ToShortDateString()
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
