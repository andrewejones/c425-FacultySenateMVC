@model IEnumerable<FacultySenateMVC.Models.Faculty>

@{
    ViewBag.Title = "Faculty";
}

<h2>Faculty</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table id="table_name">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Last)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            School
        </th>
        <th>
            Discipline
        </th>
        <th>
            Rank
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tenure)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Graduate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Active)
        </th>
        <th></th>
    </tr>
    </thead>
<tbody>
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.First)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Last)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FacultyDiscipline.FacultySchool.Abbreviation)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FacultyDiscipline.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FacultyRank.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Tenure)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Graduate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Active)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}
</tbody>
</table>

<script type="text/javascript" src="~/Scripts/jquery-1.8.2.js"></script>
<script type="text/javascript" src="~/DataTables/media/js/jquery.dataTables.js"></script>
