@{
    ViewBag.Title = "Nominations Page";
    FacultySenateMVC.Models.Election election = (FacultySenateMVC.Models.Election)ViewData["election"];
}

@if (ViewData["nominated"] != null && ((List<FacultySenateMVC.Models.Committee>)ViewData["nominated"]).Count() != 0)
{
    <h2>Nominated For:</h2>
    <table>
        <tr>
            <th>
                Committee
            </th>
            <th>
                Type
            </th>
            <th></th>
        </tr>
    @foreach (var item in (List<FacultySenateMVC.Models.Committee>)ViewData["nominated"])
    {
        <tr>
            <td>
                @item.Name
            </td>
            <td>
                @item.CommitteeType.Name
            </td>
            <td>
                @Html.ActionLink("Nominees", "Nominees", "Nomination", new { electionid = election.Id, committeeid = item.Id }, null) | 
                @Html.ActionLink("Unnominate", "Unnominate", "Nomination", new { electionid = election.Id, committeeid = item.Id }, null)
            </td>
        </tr>
    }
    </table>
    <br />
}
else
{
    <h2>Nominated For: None</h2>
}

