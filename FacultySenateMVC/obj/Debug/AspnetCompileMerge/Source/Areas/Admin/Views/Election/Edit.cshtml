@model FacultySenateMVC.Models.Election

@{
    ViewBag.Title = "Edit Election";
}

<h2>Edit Election</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Election</legend>

        @Html.HiddenFor(model => model.Id)

        <div class="display-label">
             Id
        </div>
        <div class="display-field">
            @Html.DisplayFor(model => model.Id)
        </div>

        <div class="editor-label">
            Election Type
        </div>
        <div class="editor-field">
            @Html.DropDownList("ElectionTypeId", String.Empty)
            @Html.ValidationMessageFor(model => model.ElectionTypeId)
        </div>

        <div class="editor-label">
            Nomination Start Date
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.NominationStartDate)
            @Html.ValidationMessageFor(model => model.NominationStartDate)
        </div>

        <div class="editor-label">
            Nomination End Date
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.NominationEndDate)
            @Html.ValidationMessageFor(model => model.NominationEndDate)
        </div>

        <div class="editor-label">
            Voting Start Date
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.VotingStartDate)
            @Html.ValidationMessageFor(model => model.VotingStartDate)
        </div>

        <div class="editor-label">
            Voting End Date
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.VotingEndDate)
            @Html.ValidationMessageFor(model => model.VotingEndDate)
        </div>

        <div class="editor-label">
            Term Start Date
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.TermStartDate)
            @Html.ValidationMessageFor(model => model.TermStartDate)
        </div>
    </fieldset>
    
    <div>
        <input type="submit" value="Save" /> | 
        @Html.ActionLink("Back to List", "Index")
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
