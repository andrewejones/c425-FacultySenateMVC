        </div>

        <div class="editor-label">
            End Date
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.EndDate)
            @Html.ValidationMessageFor(model => model.EndDate)
        </div>

        <div class="editor-label">
            ElectionId
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ElectionId)
            @Html.ValidationMessageFor(model => model.ElectionId)
        </div>

        <div class="editor-label">
            @Html.DisplayNameFor(model => model.Appointed)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Appointed)
            @Html.ValidationMessageFor(model => model.Appointed)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Notes)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Notes)
            @Html.ValidationMessageFor(model => model.Notes)
        </div>
    </fieldset>

    <div>
        <input type="submit" value="Save" /> | 
        @Html.ActionLink("Back to List", "Index")
    </div>
