@model IEnumerable<FacultySenateMVC.Models.CommitteeSeat>

@{
    ViewBag.Title = "Committee Seats";
}

<h2>Committee Seats</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Committee.Name)
        </th>
        <th>
            Representing
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StaggerYear)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Active)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Committee.Name)
        </td>
        <td>
            @if (item.FacultySchool == null)
            {
                @:At-Large
            }
            else
            {
                @Html.DisplayFor(modelItem => item.FacultySchool.Abbreviation)
            }
        </td>
        <td>
            @if (item.StaggerYear == null)
            {
                @:None
            }
            else
            {
                @Html.DisplayFor(modelItem => item.StaggerYear)
            }
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Active)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
