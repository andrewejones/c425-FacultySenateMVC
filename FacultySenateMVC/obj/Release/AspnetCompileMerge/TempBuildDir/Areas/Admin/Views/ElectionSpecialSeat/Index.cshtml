@model IEnumerable<FacultySenateMVC.Models.ElectionSpecialSeat>

@{
    ViewBag.Title = "Special Election Seats";
}

<h2>Special Election Seats</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            Election Id
        </th>
        <th>
            Seat Id
        </th>
        <th>
            Term Length
        </th>
        <th>
            Term End Date
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Election.Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CommitteeSeat.Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TermLength)
        </td>
        <td>
            @item.TermEndDate.ToShortDateString()
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
