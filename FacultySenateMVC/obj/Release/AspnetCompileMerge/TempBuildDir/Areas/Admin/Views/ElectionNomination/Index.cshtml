@model IEnumerable<FacultySenateMVC.Models.ElectionNomination>

@{
    ViewBag.Title = "Election Nominations";
}

<h2>Election Nominations</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            Election Id
        </th>
        <th>
            Seat Id
        </th>
        <th>
            Committee
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Faculty.First)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Faculty.Last)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Election.Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CommitteeSeat.Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CommitteeSeat.Committee.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Faculty.First)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Faculty.Last)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
