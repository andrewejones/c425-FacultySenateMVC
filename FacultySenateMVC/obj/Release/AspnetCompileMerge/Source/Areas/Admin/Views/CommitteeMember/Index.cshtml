@model IEnumerable<FacultySenateMVC.Models.CommitteeMember>

@{
    ViewBag.Title = "Committee Members";
}

<h2>Committee Members</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            Seat
        </th>
        <th>
            Committee
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Faculty.First)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Faculty.Last)
        </th>
        <th>
            School
        </th>
        <th>
            Start Date
        </th>
        <th>
            End Date
        </th>
        <th>
            Election Id
        </th>
        <th>
            Appointed
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CommitteeSeat.Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CommitteeSeat.Committee.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Faculty.First)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Faculty.Last)
        </td>
        <td>
            @if (item.CommitteeSeat.FacultySchool == null)
            {
                @:At-Large
            }
            else
            {
                @Html.DisplayFor(modelItem => item.CommitteeSeat.FacultySchool.Abbreviation)
            }
        </td>
        <td>
            @item.StartDate.ToShortDateString()
        </td>
        <td>
            @item.EndDate.ToShortDateString()
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ElectionId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Appointed)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
